{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@root/*": [
				"./*"
			],
			"@hooks/*": [
				"./hooks/*"
			],
			"@templates/*": [
				"./_templates/*"
			],
			"@app/content": [
				"./_content.js"
			],
			"@pages/*": [
				"./src/pages/*.js"
			],
			"@ui/*": [
				"./components/*.js"
			],
			"@styles/*": [
				"./*.scss",
				"./*.css"
			]
		}
	},
	"include": [
		"src"
	]
}